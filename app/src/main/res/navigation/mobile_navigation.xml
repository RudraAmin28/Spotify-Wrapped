<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_login">

    <fragment
        android:id="@+id/nav_login"
        android:name="com.example.spotifywrapped.ui.login.LoginFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_login" >

        <action
            android:id="@+id/action_loginFragment_to_wrappedFragment"
            app:destination="@id/nav_wrapped"
            app:popUpTo="@id/nav_login"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_wrapped"
        android:name="com.example.spotifywrapped.ui.wrapped.WrappedFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_wrapped" >

        <action
            android:id="@+id/action_wrappedFragment_to_settingsFragment"
            app:destination="@id/nav_settings" />
    </fragment>

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.spotifywrapped.ui.settings.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" >

        <action
            android:id="@+id/action_settingsFragment_to_wrappedFragment"
            app:destination="@id/nav_wrapped" />
    </fragment>
</navigation>