<!-- activity_settings.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spotifyBlack">

    <!-- Entry 1: Update Login Info -->
    <RelativeLayout
        android:id="@+id/entryUpdateLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/updateLoginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Login Information"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_right_arrow"
            android:translationX="30dp" />

    </RelativeLayout>

    <!-- Entry 2: Delete Account -->
    <RelativeLayout
        android:id="@+id/entryDeleteAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="16dp"
        android:layout_below="@id/entryUpdateLogin"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/DeleteAccountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_right_arrow"
            android:translationX="30dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/entrySignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="16dp"
        android:layout_below="@id/entryDeleteAccount"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/SignOutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_right_arrow"
            android:translationX="30dp" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/entrySignOut">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/home_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:contentDescription="@string/home"
            app:fabCustomSize="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
<!--        app:srcCompat="@android:drawable/icon_home"-->
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
